{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
       "drupal/core":"~8.2",
        "composer/installers": "^1.0.21",
        "wikimedia/composer-merge-plugin": "~1.3",
        "drupal/bootstrap": "^3.2",
        "acquia/lightning": "~4.1.1",
        "drupal/entity_reference_revisions": "^1.7",
        "drupal/paragraphs": "^1.10",
        "drupal/scheduled_updates": "^1.0@alpha",
        "drupal/workbench_moderation": "^1.5",
        "drupal/workflow": "^1.1",
        "drupal/context": "^4.0@beta",
        "drupal/devel": "^2.1",
        "drupal/bootstrap_clean_blog": "^1.0-rc2 ",
        "drupal/webform": "^5.8",
        "drupal/captcha": "^1.0@beta",
        "drupal/contact_block": "^1.4",
        "drupal/entity_browser": "^2.4",
        "drupal/google_analytics": "^3.0",
        "drupal/google_tag": "^1.3",
        "drupal/honeypot": "^1.30",
        "drupal/twig_tweak": "~1.9",
        "drupal/recaptcha": "^2.4",
        "drupal/add_to_head": "1.x-dev",
        "drupal/embed": "^1.3"
     
    },

    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8"
    },
    "extra": {
        "enable-patching": true

    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "scripts": {

    "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },

    "repositories": [
      {
        "type": "composer",
        "url": "https://asset-packagist.org"
      },
      {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}
